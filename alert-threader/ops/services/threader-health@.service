[Unit]
Description=Healthcheck for threader (%i)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=root
Group=root
# Per-instance environment file for health URL override
EnvironmentFile=-/etc/alert-threader.d/%i.env
ExecStart=/usr/local/sbin/check-threader-%i

[Install]
WantedBy=multi-user.target


