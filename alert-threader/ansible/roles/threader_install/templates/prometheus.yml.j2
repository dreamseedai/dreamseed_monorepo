global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "/etc/prometheus/rules/*.yml"

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['localhost:9093']

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'alert_threader_python'
    static_configs:
      - targets: ['localhost:{{ threader_python_port | default(threader_port) }}']
    metrics_path: /metrics # Assuming threader exposes /metrics

  - job_name: 'alert_threader_node'
    static_configs:
      - targets: ['localhost:{{ threader_node_port | default(threader_port) }}']
    metrics_path: /metrics

  - job_name: 'alert_threader_go'
    static_configs:
      - targets: ['localhost:{{ threader_go_port | default(threader_port) }}']
    metrics_path: /metrics