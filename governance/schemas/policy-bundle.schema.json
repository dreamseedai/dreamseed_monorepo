{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PolicyBundle",
  "type": "object",
  "required": ["bundle_id", "phase", "rbac", "feature_flags"],
  "properties": {
    "version": { "type": "string" },
    "bundle_id": { "type": "string" },
    "phase": { "type": "integer", "minimum": 0, "maximum": 3 },
    "rbac": {
      "type": "object",
      "required": ["roles"],
      "properties": {
        "roles": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "allows": { "type": "array", "items": { "type": "string" } },
              "denies": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    },
    "safety": { "type": "object" },
    "privacy": { "type": "object" },
    "approvals": { "type": "object" },
    "feature_flags": { "type": "object", "additionalProperties": { "type": "boolean" } },
    "org_overrides": { "type": "object" }
  },
  "additionalProperties": true
}
