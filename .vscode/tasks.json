{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Env Audit (GCP)",
      "type": "shell",
      "command": "bash scripts/gcp/env_audit.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "detail": "Run GCP environment audit (validates GCP ↔ Repo Vars ↔ GKE/WIF alignment)"
    },
    {
      "label": "TypeScript Check",
      "type": "shell",
      "command": "pnpm run check:ts",
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "ESLint Check",
      "type": "shell",
      "command": "pnpm run check:lint",
      "problemMatcher": "$eslint-stylish",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Pyright Check",
      "type": "shell",
      "command": "pnpm run check:py",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Ruff Check",
      "type": "shell",
      "command": "pnpm run check:ruff",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Format All",
      "type": "shell",
      "command": "pnpm run format",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Check All (Lint + Type)",
      "type": "shell",
      "command": "pnpm run check",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

