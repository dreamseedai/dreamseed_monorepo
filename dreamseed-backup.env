# DreamSeed SQLite 백업 환경 설정

# 필수 설정
DB_PATH=/home/won/projects/dreamseed_monorepo/dreamseed_analytics.db
BACKUP_DIR=/var/backups/dreamseed

# 보존 정책(일)
RETENTION_DAYS=14

# 압축/암호화 옵션
COMPRESS=gzip          # none|gzip|xz
ENCRYPT=none           # none|openssl|gpg
OPENSSL_PASSWORD=change_me_strong_pw
GPG_RECIPIENT=         # gpg 사용 시 키링에 수신자 공개키 필요

# 원격 업로드(선택)
REMOTE_TYPE=none       # none|scp|rsync|s3
REMOTE_TARGET=         # scp: user@host:/path  rsync: user@host:/path  s3: s3://bucket/prefix

# 성능/안전
IONICE=true            # I/O 친화도 낮춤
NICE=true              # CPU priority 낮춤

# 서비스 이름 (복구 시 사용)
SERVICE_NAME=dreamseed-api

