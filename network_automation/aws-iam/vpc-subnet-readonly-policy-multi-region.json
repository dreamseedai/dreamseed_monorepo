{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowVpcSubnetCidrReadInMultipleRegions",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeSubnets",
        "ec2:DescribeVpcs"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": [
            "ap-northeast-2",
            "us-east-1",
            "eu-west-1"
          ]
        }
      }
    }
  ]
}
