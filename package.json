{
  "name": "dreamseedai-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared/*",
    "shared/mathml",
    "apps/*",
    "services/*",
    "portal_front"
  ],
  "scripts": {
    "build": "pnpm -r --filter './shared/*' run build",
    "test": "pnpm -r --filter './shared/*' run test",
    "build:all": "pnpm -r run build",
    "test:all": "pnpm -r run test",
    "clean": "pnpm -r run clean || true",
    "clean:cache": "rm -rf .pytest_cache .mypy_cache .ruff_cache node_modules/.cache",
    "check:paths": "node tools/check-paths.mjs",
    "maintenance:weekly": "bash scripts/weekly-cleanup.sh",
    "maintenance:organize": "bash scripts/organize-root-files.sh"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.21",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
