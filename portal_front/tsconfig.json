{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/shared/*": [
        "../shared/*"
      ],
      "@shared/editor/*": [
        "../shared/editor/src/*"
      ],
      "@shared/schemas/*": [
        "../shared/schemas/src/*"
      ],
      "@dreamseed/shared-editor": [
        "../shared/editor/src/index.ts"
      ],
      "@dreamseed/shared-schemas": [
        "../shared/schemas/src/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
